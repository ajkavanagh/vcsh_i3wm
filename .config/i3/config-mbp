# we like Natural scrolling a la Mac, so set it up.
exec_always --no-startup-id synclient VertScrollDelta=-113

# We also like the CapsLock key to be an escape.
exec --no-startup-id setxkbmap -option caps:escape -option compose:rwin

# we like to have nm-applet running
exec --no-startup-id xrandr --output LVDS1 --primary
exec --no-startup-id nm-applet

# need the gnome-settings-daemon
exec --no-startup-id gnome-settings-daemon

# Now enable multimedia keys (we use pulseaudio)
bindsym XF86AudioRaiseVolume exec pactl set-sink-volume @DEFAULT_SINK@ +2%; exec pactl set-sink-mute @DEFAULT_SINK@ 0
bindsym XF86AudioLowerVolume exec pactl set-sink-volume @DEFAULT_SINK@ -2%; exec pactl set-sink-mute @DEFAULT_SINK@ 0
bindsym XF86AudioMute exec pactl set-sink-mute @DEFAULT_SINK@ toggle

# Backlight controls
bindsym XF86MonBrightnessUp exec xbacklight -inc 10 # increase screen brightness
bindsym XF86MonBrightnessDown exec xbacklight -dec 10 # decrease screen brightness

# Keyboard backlight controls
bindsym XF86KbdBrightnessDown exec sudo /usr/local/bin/keyboard-backlight down
bindsym XF86KbdBrightnessUp exec sudo /usr/local/bin/keyboard-backlight up


# Mod+Shift+l == Lock screen.
#bindsym $mod+Shift+x exec i3lock --color 000000
bindsym $mod+Shift+x exec --no-startup-id "~/bin/fuzzy-lock.sh"
exec --no-startup-id xautolock -time 15 -locker '~/bin/fuzzy-lock.sh' &

# We pretty much always want quasselclient running, and on it's desktop
assign [class="quassel"] $wm10
exec --no-startup-id quasselclient

# also push chrome always to wm1
assign [class="Google-chrome"] $wm1

# push a firefox evernote instance to 9
assign [class="evernote"] $wm9
assign [class="nixnote2"] $wm9
# simple version; rewrite as script to start it if it's not running
#exec --no-startup-id /usr/bin/firefox -P evernote --new-instance --class=evernote https://www.evernote.com/Home.action
exec --no-startup-id /usr/bin/nixnote2

# push Zim to screen 9 too
assign [class="Zim"] $wm9
exec --no-startup-id /usr/bin/zim

# ensure that pavucontrol ends up in a floating window
for_window [class="Pavucontrol"] floating enable
# Bring up the volume widget (until we've done something with the volume in code)
bindsym $mod+shift+v exec --no-startup-id /usr/bin/pavucontrol --tab 3

# Start dropbox when we log in
exec --no-startup-id dropbox start

# Start redshift so that we save our eyes in the evening
exec --no-startup-id /usr/bin/redshift-gtk

